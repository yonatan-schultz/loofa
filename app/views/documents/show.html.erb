<% 
=begin %> 

<p id="notice"><%= notice %></p>

<p>
  <strong>Filename:</strong>
  <%= @document.filename %>
</p>

<p>
  <strong>Content type:</strong>
  <%= @document.content_type %>
</p>

<p>
  <strong>File contents:</strong>
  <%= @document.file_contents %>
</p>

<% 
=end %>
<div class="container"> 
<p>
  <strong>We found the following problems:</strong>
  <% @document.parse %>
</p>

<% @document.parse.each do |f| %>

<%=	raw("I see that you are running <b>#{f[0]}</b>") %><br /><br />
<div class="alert alert-danger" role="alert">
	<%= raw(f[1]) %><br />
</div>
<% end %>
<% @document.destroy %>
<br /><br />
<div class="text-center"> 
	<%= link_to 'Upload Another', new_document_path, :class => "btn btn-large btn-success" %>
</div>
</div>